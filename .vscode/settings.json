{
  "editor.formatOnSave": false,
  "editor.tabSize": 2,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "files.exclude": {
    ".linaria-cache": true,
    ".next": true,
    "node_modules/": true,
    "yarn.lock": true
  }
}
